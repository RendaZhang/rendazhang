{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "src",
    "scripts",
    "tests",
    "astro.config.ts",
    "eslint.config.ts",
    "vitest.config.ts"
  ],
  "exclude": ["dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowJs": false,
    "checkJs": false,
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "plugins": [{ "name": "@astrojs/ts-plugin" }]
  }
}
