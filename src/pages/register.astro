---
import BaseLayout from '../layouts/BaseLayout.astro';
import RegisterContent from '../components/RegisterContent.jsx';
import {
  SITE_BASE_URL,
  VIEWPORT_NO_ZOOM,
  REGISTER_PAGE_PATH,
  SITE_NAME_EN,
  STYLE_PATHS
} from '../config.js';
---

<BaseLayout
  title={`Register - ${SITE_NAME_EN}`}
  description="Register Page of Renda Zhang Website"
  viewport={VIEWPORT_NO_ZOOM}
  canonical={`${SITE_BASE_URL}${REGISTER_PAGE_PATH}/`}
  extraStyles={[STYLE_PATHS.REGISTER]}
>
  <RegisterContent client:load />
</BaseLayout>
