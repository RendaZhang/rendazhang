---
import BaseLayout from '../layouts/BaseLayout.astro';
import {
  SITE_BASE_URL,
  DOCS_PAGE_PATH,
  SCRIPT_PATHS,
  STYLE_PATHS,
  VIEWPORT_NO_ZOOM,
  PAGE_TITLES,
  DOCS_DESCRIPTION,
  LOADING_TEXT
} from '../config.js';
---

<BaseLayout
  lang="en"
  title={PAGE_TITLES.DOCS}
  description={DOCS_DESCRIPTION}
  viewport={VIEWPORT_NO_ZOOM}
  canonical={`${SITE_BASE_URL}${DOCS_PAGE_PATH}/`}
  extraStyles={[STYLE_PATHS.GITHUB, STYLE_PATHS.DOCS]}
  extraScripts={[SCRIPT_PATHS.JQUERY, SCRIPT_PATHS.MARKED, SCRIPT_PATHS.DOCS]}
  bodyClass="docs-page"
  mainClass="main-content docs-main"
  og={{
    title: PAGE_TITLES.DOCS,
    description: DOCS_DESCRIPTION,
    url: `${SITE_BASE_URL}${DOCS_PAGE_PATH}/`
  }}
  metaLanguage="en, zh-CN"
>
  <div id="content">{LOADING_TEXT}</div>
</BaseLayout>
