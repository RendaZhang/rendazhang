---
import BaseLayout from '../layouts/BaseLayout.astro';
import {
  SITE_BASE_URL,
  CERTIFICATIONS_PAGE_PATH,
  OG_IMAGE_DIMENSIONS,
  TWITTER_HANDLE,
  SITE_NAME_EN,
  VERIFY_URLS,
  CREDLY_HOST,
  CREDLY_BADGE_ID,
  CREDLY_EMBED_IFRAME,
  CREDLY_CONTAINER_MAX_WIDTH,
  IMAGE_PATHS,
  STYLE_PATHS,
  SCRIPT_PATHS,
  PAGE_TITLES,
  DEFAULT_MARGIN,
  PAGE_TITLE_MARGIN_TOP,
  THEME_COLOR_LIGHT
} from '../config.js';
---

<BaseLayout
  lang="en"
  title={PAGE_TITLES.CERTIFICATIONS}
  description="AWS Certified Solutions Architect - Associate (SAA-C03) and future credentials of Renda Zhang."
  canonical={`${SITE_BASE_URL}${CERTIFICATIONS_PAGE_PATH}/`}
  bodyClass="cert-page"
  extraStyles={[STYLE_PATHS.CERTIFICATIONS]}
  extraScripts={[SCRIPT_PATHS.CERTIFICATIONS]}
>
  <Fragment slot="head">
    <meta property="og:type" content="website" />
    <meta property="og:title" content={PAGE_TITLES.CERTIFICATIONS} />
    <meta
      property="og:description"
      content="AWS Certified Solutions Architect - Associate (SAA-C03) and future credentials."
    />
    <meta property="og:url" content={`${SITE_BASE_URL}${CERTIFICATIONS_PAGE_PATH}/`} />
    <meta property="og:image" content={`${SITE_BASE_URL}${IMAGE_PATHS.CERTIFICATIONS_COVER}`} />
    <meta property="og:site_name" content={SITE_NAME_EN} />
    <meta property="og:image:width" content={OG_IMAGE_DIMENSIONS.WIDTH} />
    <meta property="og:image:height" content={OG_IMAGE_DIMENSIONS.HEIGHT} />
    <meta property="og:image:alt" content="Renda Zhang Certifications" />
    <meta property="og:image:type" content="image/jpeg" />
    <meta
      property="og:image:secure_url"
      content={`${SITE_BASE_URL}${IMAGE_PATHS.CERTIFICATIONS_COVER}`}
    />
    <meta name="twitter:title" content={PAGE_TITLES.CERTIFICATIONS} />
    <meta
      name="twitter:description"
      content="AWS Certified Solutions Architect - Associate (SAA-C03) and future credentials of Renda Zhang."
    />
    <meta name="twitter:url" content={`${SITE_BASE_URL}${CERTIFICATIONS_PAGE_PATH}/`} />
    <meta name="twitter:site" content={TWITTER_HANDLE} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content={`${SITE_BASE_URL}${IMAGE_PATHS.CERTIFICATIONS_COVER}`} />
    <meta name="twitter:creator" content={TWITTER_HANDLE} />
    <meta name="twitter:image:alt" content="Renda Zhang Certifications" />
    <meta name="theme-color" content={THEME_COLOR_LIGHT} />
  </Fragment>

  <div class="container">
    <h1 style={`margin-top:${PAGE_TITLE_MARGIN_TOP};text-align:center;`}>
      Professional Certifications
    </h1>

    <section class="cert-grid">
      <article class="cert-card">
        <h2>AWS Certified Solutions Architect - Associate (SAA-C03)</h2>
        <p><strong>Name:</strong> Renda Zhang</p>
        <p>
          <strong>Issued:</strong> 2025-06-16&nbsp;&nbsp;•&nbsp;&nbsp;<strong>Expires:</strong> 2028-06-16
        </p>

        <div
          class="credly-container"
          style={`max-width:${CREDLY_CONTAINER_MAX_WIDTH}px;margin:${DEFAULT_MARGIN} auto`}
        >
          <div class="loader"></div>
          <div
            data-iframe-width={CREDLY_EMBED_IFRAME.WIDTH}
            data-iframe-height={CREDLY_EMBED_IFRAME.HEIGHT}
            data-share-badge-id={CREDLY_BADGE_ID}
            data-share-badge-host={CREDLY_HOST}
          >
          </div>
        </div>
        <script async src={SCRIPT_PATHS.CREDLY_EMBED}></script>

        <p class="verify-links">
          <a class="verify-btn" href={VERIFY_URLS.CREDLY} target="_blank">Verify on Credly</a>
          <a class="verify-btn" href={VERIFY_URLS.AWS} target="_blank">Verify on AWS</a>
        </p>
      </article>

      <!-- 以后要加新证书 → 复制 <article> 再改文本即可 -->
    </section>
  </div>
</BaseLayout>
