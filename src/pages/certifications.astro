---
import {
  SITE_BASE_URL,
  OG_IMAGE_DIMENSIONS,
  TWITTER_HANDLE,
  SOCIAL_PROFILE_URLS,
  SITE_AUTHOR_EN,
  PERSON_SCHEMA,
  VERIFY_URLS,
  CREDLY_HOST,
  CREDLY_BADGE_ID,
  CREDLY_EMBED_IFRAME,
  FAVICON_PATH
} from '../config.js';
const jsonLD = JSON.stringify(PERSON_SCHEMA);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Professional Certifications · Renda Zhang</title>
    <link rel="canonical" href={`${SITE_BASE_URL}/certifications/`} />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=5, user-scalable=yes"
    />
    <meta
      name="description"
      content="AWS Certified Solutions Architect - Associate (SAA-C03) and future credentials of Renda Zhang."
    />
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Professional Certifications · Renda Zhang" />
    <meta
      property="og:description"
      content="AWS Certified Solutions Architect - Associate (SAA-C03) and future credentials."
    />
    <meta property="og:url" content={`${SITE_BASE_URL}/certifications/`} />
    <meta property="og:image" content={`${SITE_BASE_URL}/images/certifications_cover.jpg`} />
    <meta property="og:site_name" content="Renda Zhang" />
    <meta property="og:image:width" content={OG_IMAGE_DIMENSIONS.WIDTH} />
    <meta property="og:image:height" content={OG_IMAGE_DIMENSIONS.HEIGHT} />
    <meta property="og:image:alt" content="Renda Zhang Certifications" />
    <meta property="og:image:type" content="image/jpeg" />
    <meta
      property="og:image:secure_url"
      content={`${SITE_BASE_URL}/images/certifications_cover.jpg`}
    />
    <!-- Twitter Card -->
    <meta name="twitter:title" content="Professional Certifications · Renda Zhang" />
    <meta
      name="twitter:description"
      content="AWS Certified Solutions Architect - Associate (SAA-C03) and future credentials of Renda Zhang."
    />
    <meta name="twitter:url" content={`${SITE_BASE_URL}/certifications/`} />
    <meta name="twitter:site" content={TWITTER_HANDLE} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content={`${SITE_BASE_URL}/images/certifications_cover.jpg`} />
    <meta name="twitter:creator" content={TWITTER_HANDLE} />
    <meta name="twitter:image:alt" content="Renda Zhang Certifications" />
    <script type="application/ld+json" set:html={jsonLD} />
    <!-- Favicon & CSS -->
    <meta name="theme-color" content="#ffffff" />
    <link rel="shortcut icon" type="image/x-icon" href={FAVICON_PATH} />
    <link rel="stylesheet" href="/css/index.min.css" />
    <link rel="stylesheet" href="/css/certifications.min.css" />
  </head>

  <body>
    <div class="container">
      <button onclick="location.href='/'" role="button">← Back</button>
      <h1 style="margin-top:1.5rem;text-align:center;">Professional Certifications</h1>

      <section class="cert-grid">
        <article class="cert-card">
          <h2>AWS Certified Solutions Architect - Associate (SAA-C03)</h2>
          <p><strong>Name:</strong> Renda Zhang</p>
          <p>
            <strong>Issued:</strong> 2025-06-16&nbsp;&nbsp;•&nbsp;&nbsp;<strong>Expires:</strong> 2028-06-16
          </p>

          <!-- Credly 嵌入 -->
          <div class="credly-container" style="max-width:270px;margin:1rem auto">
            <div class="loader"></div>
            <div
              data-iframe-width={CREDLY_EMBED_IFRAME.WIDTH}
              data-iframe-height={CREDLY_EMBED_IFRAME.HEIGHT}
              data-share-badge-id={CREDLY_BADGE_ID}
              data-share-badge-host={CREDLY_HOST}
            >
            </div>
          </div>
          <script async src="/js/credly_embed.min.js"></script>

          <p>
            <a class="verify-btn" href={VERIFY_URLS.CREDLY} target="_blank">Verify on Credly</a>
            <a class="verify-btn" href={VERIFY_URLS.AWS} target="_blank">Verify on AWS</a>
          </p>
        </article>

        <!-- 以后要加新证书 → 复制 <article> 再改文本即可 -->
      </section>
    </div>
    <script defer src="/js/certifications.min.js"></script>
  </body>
</html>
