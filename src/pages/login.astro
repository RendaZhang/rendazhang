---
import BaseLayout from '../layouts/BaseLayout.astro';
import LoginContent from '../components/LoginContent.jsx';
import {
  SITE_BASE_URL,
  VIEWPORT_NO_ZOOM,
  LOGIN_PAGE_PATH,
  SITE_NAME_EN,
  STYLE_PATHS
} from '../config.js';
---

<BaseLayout
  title={`Login - ${SITE_NAME_EN}`}
  description="Login Page of Renda Zhang Website"
  viewport={VIEWPORT_NO_ZOOM}
  canonical={`${SITE_BASE_URL}${LOGIN_PAGE_PATH}/`}
  extraStyles={[STYLE_PATHS.LOGIN]}
>
  <LoginContent client:load />
</BaseLayout>
