---
import Chat from '../components/Chat.jsx';
import {
  CHAT_PAGE_PATH,
  SITE_BASE_URL,
  GEO_REGION,
  GEO_PLACENAME_EN,
  GEO_POSITION,
  GEO_ICBM,
  DEFAULT_SOCIAL_IMAGE
} from '../config.js';
---

<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=5, user-scalable=yes"
    />
    <title>AI Chat</title>
    <meta
      name="description"
      content="Chat with an AI assistant powered by DeepSeek. Conversations are saved locally and support Markdown rendering."
    />
    <link rel="canonical" href={`${SITE_BASE_URL}${CHAT_PAGE_PATH}/`} />
    <link rel="alternate" hreflang="zh" href={`${SITE_BASE_URL}${CHAT_PAGE_PATH}/`} />
    <link rel="alternate" hreflang="x-default" href={`${SITE_BASE_URL}${CHAT_PAGE_PATH}/`} />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="zh-CN" />
    <meta name="geo.region" content={GEO_REGION} />
    <meta name="geo.placename" content={GEO_PLACENAME_EN} />
    <meta name="geo.position" content={GEO_POSITION} />
    <meta name="ICBM" content={GEO_ICBM} />
    <meta property="og:title" content="AI Chat" />
    <meta property="og:description" content="Chat with an AI assistant powered by DeepSeek." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={`${SITE_BASE_URL}${CHAT_PAGE_PATH}/`} />
    <meta property="og:image" content={`${SITE_BASE_URL}${DEFAULT_SOCIAL_IMAGE}`} />
    <meta property="og:site_name" content="Renda Zhang" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="AI Chat" />
    <meta name="twitter:description" content="Chat with an AI assistant powered by DeepSeek." />
    <meta name="twitter:image" content={`${SITE_BASE_URL}${DEFAULT_SOCIAL_IMAGE}`} />
    <meta name="twitter:site" content="@RendaZhang" />
    <meta name="twitter:creator" content="@RendaZhang" />
    <!-- 核心样式提前加载，非关键资源后续由组件异步加载 -->
    <link rel="preload" href="/css/deepseek_chat.min.css" as="style" />
    <link rel="stylesheet" href="/css/deepseek_chat.min.css" />
    <link rel="preload" href="/css/github-markdown-light.min.css" as="style" />
    <link rel="stylesheet" href="/css/github-markdown-light.min.css" />
  </head>
  <body>
    <Chat client:load />
  </body>
</html>
