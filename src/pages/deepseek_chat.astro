---
import Chat from '../components/Chat.jsx';
---

<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=5, user-scalable=yes"
    />
    <title>AI Chat</title>
    <meta
      name="description"
      content="Chat with an AI assistant powered by DeepSeek. Conversations are saved locally and support Markdown rendering."
    />
    <link rel="canonical" href="https://www.rendazhang.com/deepseek_chat/" />
    <link rel="alternate" hreflang="zh" href="https://www.rendazhang.com/deepseek_chat/" />
    <link rel="alternate" hreflang="x-default" href="https://www.rendazhang.com/deepseek_chat/" />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="zh-CN" />
    <meta name="geo.region" content="CN-GD" />
    <meta name="geo.placename" content="Shenzhen, Guangdong, China" />
    <meta name="geo.position" content="22.543096;114.057865" />
    <meta name="ICBM" content="22.543096, 114.057865" />
    <meta property="og:title" content="AI Chat" />
    <meta property="og:description" content="Chat with an AI assistant powered by DeepSeek." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.rendazhang.com/deepseek_chat/" />
    <meta property="og:image" content="https://www.rendazhang.com/images/social_default.jpg" />
    <meta property="og:site_name" content="Renda Zhang" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="AI Chat" />
    <meta name="twitter:description" content="Chat with an AI assistant powered by DeepSeek." />
    <meta name="twitter:image" content="https://www.rendazhang.com/images/social_default.jpg" />
    <meta name="twitter:site" content="@RendaZhang" />
    <meta name="twitter:creator" content="@RendaZhang" />
    <!-- 核心样式提前加载，非关键资源后续由组件异步加载 -->
    <link rel="preload" href="/css/deepseek_chat.min.css" as="style" />
    <link rel="stylesheet" href="/css/deepseek_chat.min.css" />
    <link rel="preload" href="/css/github-markdown-light.min.css" as="style" />
    <link rel="stylesheet" href="/css/github-markdown-light.min.css" />
  </head>
  <body>
    <Chat client:load />
  </body>
</html>
