---
import ChatWidget from '../components/ChatWidget.jsx';
import {
  CHAT_PAGE_PATH,
  ABOUT_EN_PAGE_PATH,
  ABOUT_ZH_PAGE_PATH,
  CERTIFICATIONS_PAGE_PATH,
  DOCS_PAGE_PATH,
  SITE_BASE_URL,
  SITE_DOMAIN,
  SITE_DESCRIPTION_EN,
  SOCIAL_LINKS,
  GEO_REGION,
  GEO_PLACENAME_EN,
  GEO_POSITION,
  GEO_ICBM,
  OG_IMAGE_DIMENSIONS,
  DEFAULT_SOCIAL_IMAGE,
  TWITTER_HANDLE,
  SOCIAL_PROFILE_URLS,
  SITE_AUTHOR_EN,
  SITE_NAME_EN,
  PERSON_SCHEMA,
  IMAGE_PATHS,
  SCRIPT_PATHS,
  FAVICON_PATH,
  STYLE_PATHS,
  VIEWPORT_ZOOM_ALLOWED,
  PAGE_TITLES,
  LOGO_ALT
} from '../config.js';
const jsonLD = JSON.stringify(PERSON_SCHEMA);
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content={VIEWPORT_ZOOM_ALLOWED} />
    <title>{PAGE_TITLES.ABOUT_EN}</title>
    <meta name="description" content={SITE_DESCRIPTION_EN} />
    <link rel="canonical" href={`${SITE_BASE_URL}/`} />
    <link rel="alternate" hreflang="en" href={`${SITE_BASE_URL}${ABOUT_EN_PAGE_PATH}/`} />
    <link rel="alternate" hreflang="zh" href={`${SITE_BASE_URL}${ABOUT_ZH_PAGE_PATH}/`} />
    <link rel="alternate" hreflang="x-default" href={`${SITE_BASE_URL}/`} />
    <meta name="author" content={SITE_AUTHOR_EN} />
    <meta name="language" content="en, zh-CN" />
    <meta name="geo.region" content={GEO_REGION} />
    <meta name="geo.placename" content={GEO_PLACENAME_EN} />
    <meta name="geo.position" content={GEO_POSITION} />
    <meta name="ICBM" content={GEO_ICBM} />
    <meta name="theme-color" media="(prefers-color-scheme: light)" content="white" />
    <!-- Open Graph for social sharing -->
    <meta property="og:title" content={PAGE_TITLES.INDEX_OG} />
    <meta property="og:description" content={SITE_DESCRIPTION_EN} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={`${SITE_BASE_URL}/`} />
    <meta property="og:image" content={`${SITE_BASE_URL}${DEFAULT_SOCIAL_IMAGE}`} />
    <meta property="og:site_name" content={SITE_NAME_EN} />
    <meta property="og:image:width" content={OG_IMAGE_DIMENSIONS.WIDTH} />
    <meta property="og:image:height" content={OG_IMAGE_DIMENSIONS.HEIGHT} />
    <meta property="og:image:alt" content={LOGO_ALT.EN} />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:image:secure_url" content={`${SITE_BASE_URL}${DEFAULT_SOCIAL_IMAGE}`} />
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={PAGE_TITLES.INDEX_OG} />
    <meta name="twitter:description" content={SITE_DESCRIPTION_EN} />
    <meta name="twitter:image" content={`${SITE_BASE_URL}${DEFAULT_SOCIAL_IMAGE}`} />
    <meta name="twitter:image:alt" content={LOGO_ALT.EN} />
    <meta name="twitter:site" content={TWITTER_HANDLE} />
    <meta name="twitter:creator" content={TWITTER_HANDLE} />
    <meta name="twitter:domain" content={SITE_DOMAIN} />
    <script type="application/ld+json" set:html={jsonLD} />
    <!-- Favicon & CSS -->
    <link rel="shortcut icon" type="image/x-icon" href={FAVICON_PATH} />
    <link rel="icon" type="image/png" href={FAVICON_PATH} />
    <link rel="apple-touch-icon" href={FAVICON_PATH} />
    <link rel="stylesheet" href={STYLE_PATHS.INDEX} />
    <link rel="preload" href={STYLE_PATHS.CHAT_WIDGET} as="style" />
    <link rel="stylesheet" href={STYLE_PATHS.CHAT_WIDGET} />
  </head>

  <body>
    <div class="container">
      <div class="language-selector">
        <a href={ABOUT_ZH_PAGE_PATH} role="button" aria-label="关于我">关于我</a>
        <a href={ABOUT_EN_PAGE_PATH} role="button" aria-label="About Me">About Me</a>
      </div>
      <div class="chat-section">
        <a href={CHAT_PAGE_PATH} role="button" aria-label="Chat with AI">Chat with AI (与AI聊天)</a>
      </div>
      <div class="certification-section">
        <a href={CERTIFICATIONS_PAGE_PATH} role="button" aria-label="Certifications"
          >Certifications (证书)</a
        >
      </div>
      <div class="docs-section">
        <a href={DOCS_PAGE_PATH} role="button" aria-label="Technical Documentation">
          <span class="code-icon">&lt;/&gt;</span> 技术文档 | Tech Docs
        </a>
      </div>
      <div class="social-icons" aria-label="Social Links">
        <a href={SITE_BASE_URL} aria-label="WeChat Official Account" id="wechatLink">
          <img
            src={IMAGE_PATHS.LOADER}
            class="jxLazyClass"
            jxLazyImg="/images/social/wechat-logo.svg"
            alt="WeChat logo"
            loading="lazy"
          />
        </a>
        <a href={SOCIAL_LINKS.ZHIHU} aria-label="Zhihu">
          <img
            src={IMAGE_PATHS.LOADER}
            class="jxLazyClass"
            jxLazyImg="/images/social/zhihu-logo.svg"
            alt="Zhihu logo"
            loading="lazy"
          />
        </a>
        <a href={SOCIAL_LINKS.TOUTIAO} aria-label="Toutiao">
          <img
            src={IMAGE_PATHS.LOADER}
            class="jxLazyClass"
            jxLazyImg="/images/social/toutiao-logo.svg"
            alt="Toutiao logo"
            loading="lazy"
          />
        </a>
        <a href={SOCIAL_LINKS.CSDN} aria-label="CSDN">
          <img
            src={IMAGE_PATHS.LOADER}
            class="jxLazyClass"
            jxLazyImg="/images/social/csdn-logo.svg"
            alt="CSDN logo"
            loading="lazy"
          />
        </a>
        <a href={SOCIAL_LINKS.MEDIUM} aria-label="Medium">
          <img
            src={IMAGE_PATHS.LOADER}
            class="jxLazyClass"
            jxLazyImg="/images/social/medium-logo.svg"
            alt="Medium logo"
            loading="lazy"
          />
        </a>
      </div>
      <ChatWidget client:load />
    </div>

    <div id="wechatModal" class="modal">
      <div class="modal-content">
        <span class="close">&times;</span>
        <div class="loader"></div>
        <img
          id="wechatQR"
          data-src={IMAGE_PATHS.WECHAT_QR}
          alt="WeChat Official Account QR code"
          style="display:none;"
        />
      </div>
    </div>

    <script defer src={SCRIPT_PATHS.LAZYLOAD}></script>
    <script defer src={SCRIPT_PATHS.INDEX}></script>
  </body>
</html>
