---
const { code = '', title = '', description = '', homeLabel = '', emoji = '' } = Astro.props;
---

<section class="error-section">
  {emoji && <div class="error-emoji">{emoji}</div>}
  {code && <div class="error-code">{code}</div>}
  <h1 class="error-title">{title}</h1>
  <p class="error-description">{description}</p>
  <a href="/" class="btn btn-primary">{homeLabel}</a>
</section>

<style>
  .error-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 4rem 1rem;
    gap: 1rem;
  }

  .error-emoji {
    font-size: 4rem;
  }

  .error-code {
    font-size: 6rem;
    font-weight: 800;
    line-height: 1;
  }

  .error-title {
    font-size: 2rem;
    margin: 0;
  }

  .error-description {
    max-width: 40rem;
  }
</style>
